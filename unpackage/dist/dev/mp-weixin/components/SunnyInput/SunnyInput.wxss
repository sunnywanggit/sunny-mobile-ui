.cl-input {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 70rpx;
  width: 100%;
  line-height: 68rpx;
  background-color: #fff;
  position: relative;
  border-radius: 8rpx;
  box-sizing: border-box;
  -webkit-transition: border-color 0.2s;
  transition: border-color 0.2s;
  padding: 0 20rpx;
}
.cl-input--focus {
  border-color: #3a8ee6;
}
.cl-input.is-fill {
  width: 100%;
}
.cl-input.is-disabled {
  background-color: #f5f7fa;
}
.cl-input.is-border {
  border: 1rpx solid #dcdfe6;
}
.cl-input__wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: calc(100% - 2rpx);
  position: relative;
}
.cl-input__inner {
  height: 100%;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 26rpx;
  border: 0;
  padding: 0;
  outline: none;
  background-color: transparent;
}
.cl-input__prepend, .cl-input__append {
  font-size: 26rpx;
  line-height: normal;
}
.cl-input__prepend {
  margin-right: 20rpx;
}
.cl-input__append {
  margin-left: 20rpx;
}
.cl-input__clear, .cl-input__icon {
  display: inline-block;
  font-size: 34rpx;
  color: #999;
}
.cl-input__clear {
  color: #c1c1c1;
}
.cl-input:not(.is-disabled) {
  -webkit-box-shadow: 0 0 0 1000px transparent inset;
}
.cl-input--prefix, .cl-input--suffix {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.cl-input--prefix .cl-input__icon, .cl-input--suffix .cl-input__icon {
  position: absolute;
  top: 0;
  width: 35rpx;
  text-align: center;
}
.cl-input--prefix .cl-input__wrap {
  padding-left: 55rpx;
}
.cl-input--prefix .cl-input__icon {
  left: 0;
}
.cl-input--suffix .cl-input__wrap {
  padding-right: 50rpx;
}
.cl-input--suffix .cl-input__icon {
  right: 0;
}
.cl-input.is-disabled {
  background-color: #f5f7fa;
}
.cl-input.is-disabled .cl-input__inner {
  background-color: #f5f7fa !important;
}
.cl-input.is-round {
  border-radius: 100rpx;
}
.cl-input.is-round .cl-input__inner {
  border-radius: 100rpx;
}
.cl-form-item--error input {
  border-color: #dd524d;
}
.cl-textarea {
  border: 1rpx solid #dcdfe6;
  border-radius: 8rpx;
  height: 150rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  font-size: 26rpx;
  padding: 4rpx 10rpx;
  line-height: 40rpx;
}

